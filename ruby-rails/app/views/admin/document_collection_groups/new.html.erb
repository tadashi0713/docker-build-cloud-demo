<% content_for :page_title, "New group for #{@collection.title}" %>
<% content_for :title, "New group" %>
<% content_for :title_margin_bottom, 8 %>
<% content_for :context, @collection.title %>
<% content_for :error_summary, render(Admin::ErrorSummaryComponent.new(object: @group)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render "form", collection: @collection, group: @group, url: admin_document_collection_groups_path(@collection) %>
  </div>

  <div class="govuk-grid-column-one-third">
    <%= simple_formatting_sidebar hide_inline_attachments_help: true, show_attachments_tab_help: false %>
  </div>
</div>
