<%= render "components/summary_card", {
  title: contact.title,
  rows: contact_rows(contact),
  summary_card_actions: [
    {
      label: "Edit",
      href: edit_polymorphic_path([:admin, contactable, contact]),
    },
    *(
      if contact.missing_translations.any?
        [{
           label: "Add translation",
           href: admin_organisation_contact_translations_path(contactable,contact),

         }]
      end),
    {
      label: "Delete",
      href: polymorphic_path([:confirm_destroy, :admin, contactable, contact]),
      destructive: true,
    },
  ],
} %>
